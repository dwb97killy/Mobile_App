<LoginScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "1021409.jpg"
    GridLayout:
        cols: 1
        GridLayout:
            size_hint: 1, 0.65
            padding: 25, 25
            spacing: 70, 55
            cols: 1
            Label:
                text: "User Login"
                font_size: "25sp"
            RelativeLayout:
                TextInput:
                    size_hint: 1, 0.75
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}
                    id: username
                    hint_text: "Username"
                    font_size: "15sp"
            RelativeLayout:
                TextInput:
                    size_hint: 1, 0.75
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}
                    id: password
                    password: True
                    hint_text: "Password"
                    font_size: "15sp"
            RelativeLayout:
                Button:
                    text: "Log in"
                    font_size: "20sp"
                    size_hint: 0.3, 0.6
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}
                    on_press: root.log_in(root.ids.username.text, root.ids.password.text)
                    background_color: 1, 1, 1, 0
                    color: 1, 1, 1, 1
                    opacity: 1 if self.state == "normal" else 0.5
            Label:
                id: info_err
                text: ""
                font_size: "20sp"
                color: 1, 1, 1, 1
        GridLayout:
            size_hint: 1, 0.25
            cols: 1
        GridLayout:
            size_hint: 1, 0.1
            cols: 2
            RelativeLayout:
                Button:
                    text: "Forget Password?"
                    font_size: "15sp"
                    size_hint: 1, 0.8
                    background_color: 1, 1, 1, 0
                    opacity: 1 if self.state == "normal" else 0.5
                    color: 1, 1, 1, 1
            RelativeLayout:
                Button:
                    text: "Sign Up"
                    on_press: root.sign_up()
                    font_size: "15sp"
                    size_hint: 1, 0.8
                    background_color: 1, 1, 1, 0
                    opacity: 1 if self.state == "normal" else 0.5
                    color: 1, 1, 1, 1

<SignupScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "1065094.jpg"
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            size_hint: 1, 0.65
            padding: 25, 25
            spacing: 70, 55
            Label:
                text: "Sign up now!"
                font_size: "25sp"
            RelativeLayout:
                TextInput:
                    size_hint: 1, 0.75
                    id: username
                    hint_text: "Username"
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}
                    font_size: "15sp"
            RelativeLayout:
                TextInput:
                    size_hint: 1, 0.75
                    id: password
                    hint_text: "Password"
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}
                    font_size: "15sp"
            RelativeLayout:
                Button:
                    text: "Sign up"
                    on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.6
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}
                    background_color: 1, 1, 1, 0
                    font_size: "20sp"
            Label:
                id: info_err
                text: ""
                font_size: "20sp"
                color: 1, 1, 1, 1
        GridLayout:
            size_hint: 1, 0.25
            cols: 1
        GridLayout:
            size_hint: 1, 0.1
            cols: 2
            RelativeLayout:
                Button:
                    text: "Already have an account?"
                    on_press: root.back_log_in()
                    font_size: "15sp"
                    size_hint: 1, 0.8
                    background_color: 1, 1, 1, 0
                    opacity: 1 if self.state == "normal" else 0.5
                    color: 1, 1, 1, 1
            RelativeLayout:
                Button:
                    text: "Back to login"
                    on_press: root.back_log_in()
                    font_size: "15sp"
                    size_hint: 1, 0.8
                    background_color: 1, 1, 1, 0
                    opacity: 1 if self.state == "normal" else 0.5
                    color: 1, 1, 1, 1

<SignupScreenSuccess>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "1021409.jpg"
    GridLayout:
        cols: 1
        Label:
            size_hint: 1, 0.9
            text: "Sign up success!"
            font_size: "20sp"
            color: 1, 1, 1, 1
        Button:
            size_hint: 1, 0.1
            text: "Back to log in"
            background_color: 1, 1, 1, 0
            color: 1, 1, 1, 1
            on_press: root.back_log_in()
            opacity: 1 if self.state == "normal" else 0.5

<LoginScreenSuccess>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "912059.jpg"
    GridLayout:
        cols: 1
        padding: 25, 25
        spacing: 70, 55
        RelativeLayout:
            size_hint: 1, 0.1
            ImageButton:
                text: "Log Out"
                background_color: 1, 1, 1, 0
                source: "logout_hover.png" if self.hovered else "logout_nothover.png"
                on_press: root.log_out()
                size_hint: 0.3, 1
                pos_hint: {"center_x": 0.9, "center_y": 0.5}
        Label:
            size_hint: 1, 0.2
            text: "How do you feel?"
            font_size: "20sp"
        TextInput:
            size_hint: 1, 0.2
            id: input_text
            hint_text: "Typing Down Here"
        RelativeLayout:
            size_hint: 1, 0.2
            Button:
                size_hint: 0.3, 0.6
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                text: "Click here to see what will happen"
                on_press: root.get_file(root.ids.input_text.text)
                background_color: 1, 1, 1, 0
                color: 1, 1, 1, 1
                opacity: 1 if self.state == "normal" else 0.5
        ScrollView:
            size_hint: 1, 0.4
            Label:
                id: show_text
                text: ""
                font_size: "20sp"
                background_color: 1, 1, 1, 0
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>
    LoginScreen:
        name: "login_scr"
    LoginScreenSuccess:
        name: "login_scr_succ"
    SignupScreen:
        name: "signup_scr"
    SignupScreenSuccess:
        name: "signup_scr_succ"
